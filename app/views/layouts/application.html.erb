<!DOCTYPE html>
<html>
  <head>
    <title>Wracket</title>
    <meta charset="utf8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex">
    <meta name="robots" content="nofollow">

    <%= csrf_meta_tags %>
    <%= yield :head %>
    <% if should_load_css? %>
      <link rel="stylesheet" href="<%= asset_url('global-styles.css') %>">
    <% else %>
      <script src="<%= asset_url('global-styles.js') %>"></script>
    <% end %>
  </head>

  <body>
    <%= yield %>
    <script crossorigin src="<%= asset_url('react-redux.js') %>"></script>
    <script crossorigin src="<%= asset_url('vendors.js') %>"></script>
    <%= yield :scripts %>
  </body>
</html>
