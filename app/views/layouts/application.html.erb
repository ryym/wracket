<!DOCTYPE html>
<html>
  <head>
    <title>Wracket</title>
    <meta charset="utf8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex">
    <meta name="robots" content="nofollow">

    <%= csrf_meta_tags %>
    <%= yield :head %>
    <% if should_load_css? %>
      <link rel="stylesheet" href="<%= asset_url('global-styles.css') %>">
    <% end %>
  </head>

  <body>
    <%= yield %>
    <% common_javascript_assets.each do |path| %>
      <script crossorigin src="<%= asset_url(path) %>"></script>
    <% end %>
    <%= yield :scripts %>
  </body>
</html>
