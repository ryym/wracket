{
  "name": "wracket",
  "private": true,
  "author": "ryym <ryym.64@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server",
    "lint": "yarn lint:js && yarn lint:ts",
    "lint:js": "eslint .",
    "lint:ts": "tslint -p . -t verbose 'frontend/**/*.ts?(x)'",
    "precommit": "lint-staged",
    "test": "mocha --opts mocha.opts 'frontend/**/*_test.{ts,tsx}'",
    "test:w": "npm run test -- --watch --watch-extensions ts,tsx"
  },
  "lint-staged": {
    "*.js": [
      "npx prettier --write",
      "npx eslint"
    ],
    "*.{ts,tsx}": [
      "npx prettier --write",
      "npx tslint -p tsconfig.precommit.json"
    ],
    "*.{css,scss}": [
      "npx prettier --write"
    ],
    "*.{rb,rake}": [
      "bundle exec rubocop -a --force-exclusion"
    ]
  },
  "//": [
    "TODO: Remove @types/node from devDependencies",
    "@types/react-dom depends on @types/node, and its lates version is 10.0.0.",
    "But it has a bug https://github.com/DefinitelyTyped/DefinitelyTyped/issues/25342.",
    "So use @types/node 8.10.10 explicitly for now."
  ],
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/mocha": "^5.2.0",
    "@types/node": "8.10.10",
    "@types/react": "^16.3.0",
    "@types/react-dom": "^16.0.4",
    "@types/react-redux": "^6.0.0",
    "@types/redux-logger": "^3.0.5",
    "awesome-typescript-loader": "^3.5.0",
    "clean-webpack-plugin": "^0.1.18",
    "css-loader": "^0.28.10",
    "dotenv": "^5.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "mocha": "^5.1.1",
    "postcss-loader": "^2.1.5",
    "postcss-nested": "^3.0.0",
    "postcss-scss": "^1.0.5",
    "postcss-simple-vars": "^4.1.0",
    "prettier": "^1.11.1",
    "sinon": "^5.0.3",
    "style-loader": "^0.20.2",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3",
    "webpack": "3.5.4",
    "webpack-dev-server": "^2.7.0",
    "webpack-manifest-plugin": "^1.3.1"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-dutiful-thunk": "^1.1.0",
    "redux-logger": "^3.0.6"
  }
}
